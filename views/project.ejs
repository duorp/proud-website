<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %></title>
    <link rel="stylesheet" href="/style.css">
    <script src="https://unpkg.com/@panzoom/panzoom/dist/panzoom.min.js"></script>
<script src="https://d3js.org/d3.v7.min.js"></script>
<script src="/js/storyGrid.js"></script>
</head>
<body>
  
    <%- include('partials/header') %>
    

    <main class="main-content project-page">
      <section class="project-page__hero">
        <h2><%= project.headline %></h2>
        <p><%- project.description %></p>
               <div class="card__tags">
        <% project.tags.forEach((tag, i) => { %>
          <span class="tag"><%= tag %></span>
        <% }) %>
      </div>
        </section>
<section class="project-page">

  <% project.blocks.forEach(block => { %>


    <% /* TEXT BLOCK */ %>
    <% if (block.type === "text") { %>
      <p class="block block--text">
        <%- block.content %>
      </p>
    <% } %>

    <% /* IMAGE GROUP BLOCK */ %>
    <% if (block.type === "image") { %>
      <% 
        let sizeClass = "image--medium";
        if (block.size === "small") sizeClass = "image--small";
        if (block.size === "large") sizeClass = "image--large";
      %>

      <div class="block <%= sizeClass %>">
        <% block.images.forEach(img => { %>
          <img
            src="<%= img.src %>"
            style="flex-grow: <%= img.grow || 1 %>;"
            loading="lazy"
          >
        <% }) %>
      </div>
    <% } %>

    <% /* CUSTOM HTML BLOCK */ %>
    <% if (block.type === "custom") { %>
      <div class="block--custom">
        <%- block.content %>
      </div>
    <% } %>

  <% }) %>
</section>
        
    </main>

    <%- include('partials/footer') %>
</body>
<script >




  const elem = document.getElementById('poster-tile')
const panzoom = Panzoom(elem, {

  maxScale: 5,
  contain: 'outside'

})
panzoom.pan(10, 10)
panzoom.zoom(2, { animate: true })

// Panning and pinch zooming are bound automatically (unless disablePan is true).
// There are several available methods for zooming
// that can be bound on button clicks or mousewheel.
button.addEventListener('click', panzoom.zoomIn)
elem.parentElement.addEventListener('wheel', panzoom.zoomWithWheel)
</script>
</html>

